void BubbleSort(int a[],int n,long &com,long &m){
   int i,z,c;
   com=0;m=0;
   for(c=1;c<n;c++)
      for(i=0;i<(n-1);i++){
	 com++;
	 if(a[i]>a[i+1]){
	    z=a[i];
	    a[i]=a[i+1];
	    a[i+1]=z;
	    m++;
	 }
      }
}
void seleccion(int arr[],int n,long &c,long &m){
   int i,j,min,z;
   c=0;m=0;
   for(i=0;i<=n;i++){
      min=i;
      for(j=i+1;j<n;j++){
	 c++;
	 if(arr[j]<arr[min])
	    min=j;
      }
      z=arr[min];
      arr[min]=arr[i];
      arr[i]=z;
      m++;
   }
}
void insercion(int arr[],int n,long &c,long &m){
   int i,j,aux,b;
   c=0;m=0;
   for(i=1;i<n;i++){
      aux=arr[i];
      b=0;
      for(j=i-1;(j>=0)||(b==1);j--){
	 c++;
	 if(aux>arr[j]){
	    arr[j+1]=aux;
	    m++;
	    b=1;
	 }else{
	    arr[j+1]=arr[j];
	    m++;
	 }
      }
      if(j==-1){
	 arr[0]=aux;
	 m++;
      }
   }
}
void shell(int arr[],int n,long &c,long &m){
   int salto,i,j,k,z;
   c=0;m=0;
   salto=n/2;
   while(salto>0){
      for(i=salto;i<n;i++){
	 for(j=i-salto;j>=0;j-=salto){
	    k=j+salto;
	    c++;
	    if(arr[j]>arr[k]){
	       z=arr[j];
	       arr[j]=arr[k];
	       arr[k]=z;
	       m++;
	    }else
	       j=-1;
	 }
      }
      salto=salto/2;
   }
}
void captura(int list[],char *nFile){
   char temp[6],c;
   int file,pos=0,i=0;
   if((file=open(nFile,0))>=0){
      while(read(file,&c,1)!=0){
	 if((c!=',')&&(c!='\n')){
	    temp[pos]=c;
	    pos++;
	 }else{
	    temp[pos]='\0';
	    list[i]=atoi(temp);
	    i++;
	    pos=0;
	 }
      }
      close(file);
      /*printf("\n\tArchivo leido con exito\n\t");
      getch();*/
   }else{
      gotoxy(1,24);
      printf("Error al abrir el archivo %s",nFile);
   }
}

